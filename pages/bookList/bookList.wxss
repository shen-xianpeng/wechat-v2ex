.container {
  /** column-count: 2; */
  width: 100%;
  display: block;
  background: #f3f2f5;
}

.book-photo {
  max-height: 300rpx;
  max-width: 200rpx;
  width: auto;
  margin: 0 auto;
  margin-top: 50rpx;
  display: block;
}

.book-user-info {
  height: 60rpx;
  width: 100%;
}

.book-user-info image {
  height: 50rpx;
  width: 50rpx;
  border-radius: 30rpx;
  float: left;
  margin-left: 10rpx;
}

.item .price {
  width: 100%;
  display: block;
  color: #f9b73b;
}

.book-user-info .recommend {
  color: gray;
  font-size: 30rpx;
  text-align: left;
  width: 280rpx;
  padding: 0 5rpx 0 5rpx;
  display: block;
  float: left;
}

.item {
  position: relative;
  display: inline-block;
  width: 350rpx;
  overflow: hidden;
  height: 500rpx;
  text-align: center;
  box-shadow: 3rpx 3rpx 3rpx 3rpx #e9ebed;
  border-radius: 8rpx;
  margin: 10rpx 0rpx 10rpx 18rpx;
}

image {
}

.text {
  font-size: 25rpx;
  line-height: 30rpx;
  padding: 5rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.title {
  padding: 10rpx;
}

.description {
  padding: 10rpx;
}

.bottom-loader {
  text-align: center;
  color: gray;
  background: #f3f2f5;
  margin: 10rpx;
  font-size: 30rpx;
}

swiper image {
  height: 100%;
  margin: 0 auto;
  display: block;
}

.alarm image {
  width: 50rpx;
  height: 50rpx;
  float: left;
  padding: 20rpx;
}

.alarm {
  overflow: hidden;
  padding-left: 20rpx;
  height: 91rpx;
  background: white;
}

.swiper_msg {
  position: relative;
  padding: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  float: left;
  width: 600rpx;
  color: #333;
}

.menuholder {
  display: none;
}

.menuholder.sticked {
  display: block;
  height: 80rpx;
}

.menu.sticked {
  position: fixed;
  top: 0;
  margin-top: 0;
  padding-top: 0;
  z-index: 1;
}

/*总菜单容器*/

.menu {
  box-sizing: border-box;
  width: 100%;
  display: block;
  height: 80rpx;
  border-top: 1px solid #f3f2f5;
}

/*一级菜单 f4f4f4*/

.menu dt {
  font-size: 36rpx;
  float: left;
  /*hack*/
  width: 50%;
  height: 80rpx;
  border-bottom: 1px solid #f3f2f5;
  text-align: center;
  background-color: white;
  color: #5a5a5a;
  line-height: 80rpx;
}

/*二级菜单外部容器样式*/

.menu dd {
  text-align: center;
  position: absolute;
  width: 100%;
  /*hack*/
  top: 83rpx;
  left: 0;
  z-index: 999;
}

/*二级菜单普通样式*/

.menu li {
  font-size: 32rpx;
  line-height: 90rpx;
  color: #575757;
  height: 90rpx;
  display: block;
  padding-left: 8px;
  background-color: #fff;
  border-bottom: 1px solid #f3f2f5;
}

/* 显示与隐藏 */

.show {
  display: block;
}

.hidden {
  display: none;
}

/*二级菜单高亮样式*/

.menu li.highlight {
  background-color: #f4f4f4;
}

dl.menu {
  position: relative;
}

swiper {
  z-index: 2;
  width: 100%;
  background: white;
  position: relative;
}

#scrollmenu {
  z-index: 1;
  position: absolute;
}

#item-list {
  background: white;
  width: 100%;
  top: 0;
  height: 0;
  border: 0;
}

/* 0rpx有高度 bug*/


.ad-swiper image {
  width: 100%;
}

.ad-swiper {
  height: 360rpx;
}

.item {
  background: white;
}

.dis-label-wrap {
  position: absolute;
  float: left;
  background: #f9b73b;
  color: white;
  border-radius: 10rpx;
  padding: 5rpx;
  float: left;
  margin: 5rpx;
}

.dis-label-wrap  view {
  font-size: 26rpx;
  text-align: left;
  padding-left: 10rpx;
}
