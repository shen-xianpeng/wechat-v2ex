page, .page, .page__bd {
}

.page__bd {
  padding-bottom: 0;
}

.weui-tab__content {
}

.nav-menu {
  background: white;
  box-sizing: border-box;
  height: 100rpx;
  position: fixed !important;
}

.bottom-loader {
  text-align: center;
  font-size: 30rpx;
}

.weui-tab__panel {
  padding-top: 0 !important;
  margin-top: 100rpx;
  overflow: hidden;
}

.entry-header {
  border-top: 10px solid #f3f2f5;
  border-bottom: 1rpx solid #f3f2f5;
  height: 60rpx;
  width: 690rpx;
  display: inline-block;
  float: left;
  font-size: 32rpx;
  line-height: 60rpx;
  padding: 10rpx 10rpx 10rpx 50rpx;
}

.entry-nav-icon {
  display: inline-block;
  float: right;
}

.entry-nav-icon image {
  height: 60rpx;
  width: 100rpx;
}

.entry-label {
  float: left;
  display: inline-block;
}

.book-cover {
  height: 200rpx;
  width: 200rpx;
  display: inline-block;
  float: left;
}

.entry-body {
  display: inline-block;
  width: 710rpx;
  padding: 20rpx;
}

.entry-book-info {
  display: inline-block;
  float: left;
  width: 390rpx;
}
.book-title {
text-overflow:ellipsis;
white-space:nowrap;
width:400rpx;
overflow:hidden;
height:100rpx;
line-height:100rpx;
font-size:36rpx;


}

.book-author {
text-overflow:ellipsis;
white-space:nowrap;
width:400rpx;
height:50rpx;
line-height:50rpx;
font-size:32rpx;
vertical-align:middle;



}
.book-coin {
text-overflow:ellipsis;
white-space:nowrap;
width:400rpx;
height:50rpx;
line-height:50rpx;
font-size:32rpx;
vertical-align:middle;
color: #f9b73b;


}

.entry-book-info .title {
  display:inline-block;
width:400rpx;
height:59rpx;

}


.entry-footer {
  height: 100rpx;
  border-top: 1rpx solid #f3f2f5;
}

.entry-footer-buyer {
  display: inline-block;
  width: 300rpx;
  padding-left: 50rpx;
  float: left;
  height: 100rpx;
  line-height: 100rpx;
  box-sizing: border-box;
    font-size: 32rpx;


}

.entry-footer-btns {
  display: inline-block;
  width: 450rpx;
  height: 100rpx;
  float: right;

}

.entry-foonter-btn {
  padding: 5rpx;
  display: inline-block;
  float: right;
  box-sizing: border-box;
  height: 50rpx;
  line-height: 40rpx;
  margin-top: 25rpx;
  margin: 20rpx;
  border: 1rpx solid gray;
  border-radius: 5rpx;
  font-size: 30rpx;
}