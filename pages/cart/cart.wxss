.entry-header {
  height: 80rpx;
  width: 100%;
  border-bottom: 1rpx solid #e6e6e6;
}

page {
  background: #fafafb;
}
.entry {
  background: white;
  border-top: 1rpx solid #e6e6e6;
  border-bottom: 1rpx solid #e6e6e6;
  margin-top: 20rpx;
}

.entry-header view {
  display: inline-block;
}

.user-info {
  width: 400rpx;
}

.nav-icon {
  width: 300rpx;
  text-align: right;
}

.entry-body {
  width: 100%;
  height: 300rpx;
  position: relative;
}

.book-list {
  height: 100%;
  width: 750rpx;
  overflow-x: scroll;
  white-space: nowrap;
}

.entry-book {
  width: 200rpx;
  height: 300rpx;
  display: inline-block;
  background: white;
}

.entry-body view {
  display: inline-block;
}

.nav-cart {
  position: absolute;
  right: 0;
  height: 100%;
  width: 200rpx;
  line-height: 300rpx;
  background: -webkit-linear-gradient(left, rgba(255, 255, 255, 0), rgba(255, 255, 255, 1));
  filter: alpha(opacity=50);
  -moz-opacity: 0.5;
  -khtml-opacity: 0.5;
  opacity: 0.5;
  text-align: right;
  padding-right: 20rpx;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin: 10rpx;
  float: left;
}

.user-name {
  display: inline-block;
  float: left;
  line-height: 80rpx;
  height: 80rpx;
  color: #333;
}

.nav-icon {
  width: 350rpx;
  height: 80rpx;
  line-height: 80rpx;
  float: right;
}

.nav-icon image {
  height: 80rpx !important;
  display: inline-block;
  width: 50rpx;
  margin-right: 20rpx;
}

.nav-icon label {
  width: 280rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: inline-block;
  float: left;
  text-align: right;
  color: #999;
  font-size: 36rpx;
}

.entry-book image {
  height: 200rpx;
  width: 200rpx;
}

.book-price {
  display: inline-block;
  width: 200rpx;
  height: 90rpx;
  float: left;
  text-align: center;
  color: #ffbb66;
  font-size: 30rpx;
}
