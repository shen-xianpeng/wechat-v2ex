<view class="entry" wx:for="{{groupList}}" wx:for-index="j" wx:key="id">

  <view class="entry-header">
    <view class="user-info">
      <image class="user-avatar" src="{{item[0].user.avatar}}"></image>
      <label class="user-name">{{item[0].user.name}}</label>
    </view>
    <view class="nav-icon">
    <label class="">去结算</label>
     <image src="../../images/arrow.png" mode="aspectFit" ></image>

      
    </view>

  
  </view>

  <view class="entry-body">
    <view class="book-list">
      <view class="entry-book" wx:for="{{item}}" wx:for-index="k" wx:key="id" >
        <image mode="center"  src="{{item.image_list[0]}}"></image>
        <label class="book-price">100书币</label>
      </view>

    </view>
    <view class="nav-cart">
      共{{item.length}}本
    </view>

  
  </view>


</view>
