<!--index.wxml-->
<view class="container">
<button type="default" bindtap="btn_default" catchtap="onTabAdd">
添加图书</button>


<button type="default" bindtap="btn_default" catchtap="chooseImages">
上传图片</button>


<view class="topic-info">
        <text class="container">{{book.title}}</text>
    
        <text class="container">{{book.publisher}}</text>

        <image class="" mode="aspectFit" src="{{book.image}}">  
</image>  
    </view>
</view>


<modal hidden="{{!showSuccessModal}}" title="添加成功" confirm-text="查看" cancel-text="" bindcancel="onCancelModal" bindconfirm="onConfirmModal" no-cancel="yes">
    
</modal>


<modal hidden="{{!showErrorModal}}" title="添加失败" confirm-text="关闭" cancel-text="" bindcancel="onCancelModal" bindconfirm="onErrorConfirmModal" no-cancel="yes">
    {{errMsg}}
</modal>



    <view class="image-item" wx:for="{{image_list}}"  wx:for-index="j" wx:key="">
      <image  catchtap="goBookDetail"  id="{{item}}" mode="aspectFit" src="{{item}}"></image>
 
    </view>

