/* pages/addBook/addBook.wxss */

.container {
  width: 100%;
}

.image-item  {
  display: inline-block;
}

.image-item image {
  width: 200rpx;
}


.book-form {
  margin: 20rpx;

}
.form-entry {
  padding: 10rpx;
}

.form-label {
    /* Other styling.. */
    text-align: right;
    clear: both;
    float:left;
    margin-right:15px;
    line-height:1.4rem;

}

.photo-box-wrapper {
  position:relative;
  float:left;
  width:200rpx;
  height:250rpx;
  border: 3rpx solid #D9D9D9;
  margin-left: 20rpx;
}
.photo-wrap {
  width: 100%;
  margin: 20rpx;
  overflow:hidden;

}
.photo-image {
  width: 100%;
  height:100%;
}

.submit-book {
  width: 50%;
}

.photo-box:before {
    width: 2px;
    height: 39.5px;
}
.photo-box:before, .photo-box:after {
    content: " ";
    position: absolute;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #D9D9D9;
}

.photo-box:after {
    width: 39.5px;
    height: 2px;
}

.hidden {
  display: none;
}
