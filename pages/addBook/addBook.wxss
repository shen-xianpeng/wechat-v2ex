/* pages/addBook/addBook.wxss */

.container {
  width: 100%;
}

.image-item {
  display: inline-block;
}

.image-item image {
  width: 200rpx;
}

.book-form {
  margin: 5rpx;
}

.form-entry {
  position: relative;
  padding: 10rpx;
  overflow: hidden;
  border-bottom: 1px solid #f3f2f5;
}

.form-entry label {
  float: left;
}

.form-entry picker {
  float: left;
  width: 400rpx;
  height: 66rpx;
  line-height: 66rpx;
  overflow: hidden;
  font-size: 32rpx;
}

.form-entry input {
  line-height: 60rpx;
  height: 60rpx;
  width: 500rpx;
  font-size: 30rpx;
}

.form-label {
  /* Other styling.. */
  text-align: right;
  font-size: 28rpx;
  clear: both;
  float: left;
  margin-right: 15px;
  line-height: 60rpx;
  width: 160rpx;
}

.photo-box-wrapper {
  position: relative;
  float: left;
  width: 200rpx;
  height: 250rpx;
  border: 3rpx solid #d9d9d9;
  margin-left: 20rpx;
  margin-bottom: 10rpx;
}

.photo-wrap {
  margin: 20rpx;
  overflow: hidden;
}

.top-entry {
  border-top: 1px solid #f3f2f5;
}

.photo-image {
  width: 100%;
  height: 100%;
}

.submit-book {
  width: 200rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.photo-box.default:before {
  width: 2px;
  height: 39.5px;
}

.photo-box.default:before, .photo-box.default:after {
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #d9d9d9;
}

.photo-box:after {
  width: 39.5px;
  height: 2px;
}

.hidden {
  display: none;
}

.photo-image-label {
  position: absolute;
  color: gray;
  z-index: 200000;
  color: gray;
  display: block;
  top: 10rpx;
  margin: 0 auto;
  width: 100%;
  text-align: center;
  font-size: 30rpx;
}

.scan-icon {
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  margin-top: 50rpx;
}

.book-title-input {
  float: left;
  width: 500rpx !important;
}

.delete-photo {
  top: 170rpx;
  left: 77rpx;
  width: 50rpx !important;
  height: 100rpx !important;
  position: absolute;
  bottom: 100rpx;
  margin: 0 auto;
}

.photo-box-wrapper.uploading .photo-box {
  display: none;
}

.photo-box-wrapper.uploading .photo-image-label {
  display: none;
}

.photo-box-wrapper.default  .delete-photo {
  display: none;
}

.location-info {
  line-height: 60rpx;
  height: 60rpx;
  width: 500rpx;
  font-size: 30rpx;
  float: left;
}

.scan-tip {
  font-size: 30rpx;
  text-align: center;
  color: gray;
}



.arrow-icon {
width:50rpx;
height:90rpx;
position:absolute;
right:30rpx;
top:0;
}