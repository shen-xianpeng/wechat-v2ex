.container {
  background: #efeff4;
  height:100%;
}

page {
    height:100%;

}
.topic-owner {
  display: block;
  text-align: center;
  align-items: center;
  margin: 30rpx;
}

.owner-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100%;
}

.topic-created {
  margin-left: 30rpx;
  font-size: 14px;
  color: #999;
}

.topic-tit {
  flex: 1;
  box-sizing: border-box;
  line-height: 1.4;
  font-size: 14px;
  color: #333;
}

.topic-info {
  margin-bottom: 40rpx;
  color: #777;
}

.topic-desc {
  margin-bottom: 20rpx;
  line-height: 1.4;
  word-wrap: break-word;
  word-break: normal;
  font-size: 14px;
  color: #333;
}

.hidden {
  display: none;
}

.user-name {
  width: 100%;
  display: block;
}


#mine .quote {
    color: #323232;
}

#mine .quote > view {
    height: 88rpx;
    padding: 0 24rpx;
    font-size: 28rpx;
    background: #ffffff;
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

#mine .quote image {
    width: 13rpx;
}

#mine .quote .get {
    border-top: 1rpx solid #e1e1e1;
    border-bottom: 1rpx solid #e1e1e1;
}

#mine .quote .news {
    margin: 20rpx 0;
}

#mine .quote .prompt {
    color: #909090;
    transform:translate(0, -50%);
    position: absolute;
    top: 50%;
    right: 58rpx;
}

#mine .quote .dot {
    width: 14rpx;
    height: 14rpx;
}